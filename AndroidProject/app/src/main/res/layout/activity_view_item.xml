<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projet.ViewItemActivity">


    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/inputTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/VerticalebiasName"
        ></TextView>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/inputTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="@dimen/VerticalebiasDescription"
        app:layout_constraintTop_toTopOf="parent"></TextView>



    <Button
        android:id="@+id/edit"
        android:layout_width="@dimen/sizeButton_bp_width"
        android:layout_height="@dimen/sizeButton_bp_height"
        android:textSize="@dimen/inputTxt"
        android:text="Editer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/VerticalebiasBiais"
        app:layout_constraintHorizontal_bias="@dimen/Horizontalbias2Button"/>

    <Button
        android:id="@+id/back"
        android:layout_width="@dimen/sizeButton_bp_width"
        android:layout_height="@dimen/sizeButton_bp_height"
        android:textSize="@dimen/inputTxt"
        android:text="Retour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/VerticalebiasBiais"
        app:layout_constraintHorizontal_bias="@dimen/Horizontalbias1Button"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="@dimen/sizeButton_delete_width"
        android:layout_height="@dimen/sizeButton_bp_height"
        android:textSize="@dimen/inputTxt"
        android:text="Supprimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>